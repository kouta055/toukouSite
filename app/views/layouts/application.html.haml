!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Bapp
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
  %body
    %p BikeLife
    %header.header
      .dropdown
        .dropdown-content
          - if current_page?(main_path)
            = link_to 'ホーム', root_path, class: 'headerBtn'
            = link_to 'つぶやき', articles_path, class: 'headerBtn'
          - elsif current_page?(root_path)
            = link_to 'MyBikeStory', main_path, class: 'headerBtn'
            = link_to 'つぶやき', articles_path, class: 'headerBtn'
          - else current_page?(root_path)
            = link_to 'ホーム', root_path, class: 'headerBtn'
            = link_to 'MyBikeStory', main_path, class: 'headerBtn'
          - if user_signed_in?
            = link_to 'ログアウト', destroy_user_session_path, data: { method: 'delete' }
          - else
            = link_to 'ログイン', new_user_session_path, class: 'headerBtn'
    - if flash.present?
      .flash
        - flash.each do |key, value|
          %div{:class => key}= value
    = yield
