= link_to article_path(article) do
  .card
    .card_image
    .card_content
      .card_title
        = article.title
      .card_heart
        = image_tag 'heart.svg'
      .card_detail
        = image_tag current_user.avatar_image
        %div
          %p= article.author_name
          %p= article.display_created_at